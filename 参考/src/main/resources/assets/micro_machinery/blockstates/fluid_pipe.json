{
	"multipart": [
		{   "apply": { "model": "micro_machinery:fluid_pipe_center" }},
		{   "when": { "statue_north": "true" },
			"apply": { "model": "micro_machinery:fluid_pipe_arm", "uvlock": true }
		},
		{   "when": { "statue_east": "true" },
			"apply": { "model": "micro_machinery:fluid_pipe_arm", "y": 90, "uvlock": true }
		},
		{   "when": { "statue_south": "true" },
			"apply": { "model": "micro_machinery:fluid_pipe_arm", "y": 180, "uvlock": true }
		},
		{   "when": { "statue_west": "true" },
			"apply": { "model": "micro_machinery:fluid_pipe_arm", "y": 270, "uvlock": true }
		},
		{   "when": { "statue_up": "true" },
			"apply": { "model": "micro_machinery:fluid_pipe_arm", "z": 90, "uvlock": true }
		},
		{   "when": { "statue_down": "true" },
			"apply": { "model": "micro_machinery:fluid_pipe_arm", "z": 270, "uvlock": true }
		}
	]
}